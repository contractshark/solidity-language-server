{
  "name": "solidity-language-server-bundle",
  "description": "A language server for Solidity language and example client",
  "displayName": "Solidity Language Support",
  "license": "Apache-2.0",
  "version": "0.1.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/rocky/solidity-language-server"
  },
  "publisher": "rocky bernstein",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "solidity",
    "ethereum",
    "blockchain",
    "compiler"
  ],
  "engines": {
    "vscode": "^1.23.0"
  },
  "activationEvents": [
    "onLanguage:solidity"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Solidity configuration",
      "properties": {
        "solidity.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 10,
          "description": "Controls the maximum number Solidity compiler errors/warnings the server will return."
        },
        "solidity.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        },
        "solidity.compilerOptions.remappings": {
          "type": "array",
          "items": {
            "type": "object",
            "title": "Compiler remappings",
            "properties": {
              "prefix": {
                "type": "string",
                "description": "The prefix to remap"
              },
              "path": {
                "type": "string",
                "description": "The path to remap the prefix to"
              }
            }
          },
          "default": [],
          "description": "Compiler remappings"
        },
        "solidity.compilerOptions.optimizer.enabled": {
          "type": [
            "boolean"
          ],
          "default": false,
          "description": "Enables optimizer"
        },
        "solidity.solium.enabled": {
          "type": [
            "boolean"
          ],
          "default": true,
          "description": "Enables solium linting"
        },
        "solidity.solium.rules": {
          "type": [
            "object"
          ],
          "default": {
            "array-declarations": true,
            "blank-lines": false,
            "camelcase": true,
            "deprecated-suicide": true,
            "double-quotes": true,
            "imports-on-top": true,
            "indentation": false,
            "lbrace": true,
            "mixedcase": true,
            "no-empty-blocks": true,
            "no-unused-vars": true,
            "no-with": true,
            "operator-whitespace": true,
            "pragma-on-top": true,
            "uppercase": true,
            "variable-declarations": true,
            "whitespace": true
          },
          "description": "Solium linting rules"
        },
        "solidity.solhint.enabled": {
          "type": [
            "boolean"
          ],
          "default": true,
          "description": "Enables solhint linting"
        },
        "solidity.solhint.rules": {
          "type": [
            "object"
          ],
          "default": {},
          "description": "Solhint linting rules"
        }
      }
    },
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./solidity.configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "solidity",
        "path": "./snippets/solidity.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./syntaxes/solidity.json"
      }
    ]
  },
  "icon": "images/icon.png",
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "tsc -p ./ && mocha out/test"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.0.28",
    "@types/glob": "^5.0.32",
    "@types/lodash": "^4.14.74",
    "@types/mz": "^0.0.32",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^2.3.5",
    "@types/temp": "^0.8.29",
    "import-sort-cli": "^3.3.0",
    "import-sort-parser-babylon": "^3.2.0",
    "import-sort-parser-typescript": "^3.2.0",
    "import-sort-style-module": "^3.0.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.3",
    "temp": "^0.8.3",
    "tslint": "^5.17.0",
    "typescript": "^3.4.5"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "dependencies": {
    "commander": "^2.11.0",
    "fast-json-patch": "^2.0.5",
    "glob": "^7.1.2",
    "iterare": "^0.0.8",
    "language-solidity": "^0.4.18-alpha",
    "lodash": "^4.17.4",
    "mz": "^2.7.0",
    "nodemon": "^1.12.1",
    "rxjs": "^6.5.2",
    "rxjs-compat": "^6.5.2",
    "semaphore-async-await": "^1.5.1",
    "solc": "^0.5.8",
    "solhint": "^1.4.0",
    "solium": "^1.0.3",
    "solparse": "^1.2.8",
    "tsc": "^1.20150623.0",
    "vscode": "^1.1.5",
    "vscode-languageclient": "^3.4.3",
    "vscode-languageserver": "^3.4.2",
    "vscode-languageserver-types": "^3.4.0"
  }
}
